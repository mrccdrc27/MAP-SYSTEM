# Kong Gateway - Local Development Environment
# Copy this content to kong/.env for local development

# =============================================================================
# Kong Gateway Configuration
# =============================================================================
KONG_DATABASE=off
KONG_DECLARATIVE_CONFIG=/kong/kong.local.yml
KONG_PROXY_LISTEN=0.0.0.0:8080
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_LOG_LEVEL=info

# JWT Secret (must match DJANGO_JWT_SIGNING_KEY in all services)
KONG_JWT_SECRET=signing-key-1234

# =============================================================================
# Service Hosts (Local Development with localhost)
# =============================================================================

# 1. Auth Service - Authentication & Authorization
AUTH_SERVICE_HOST=localhost
AUTH_SERVICE_PORT=8003

# 2. Workflow API - TTS Backend
WORKFLOW_API_HOST=localhost
WORKFLOW_API_PORT=1001

# 3. Helpdesk Backend - HDTS Backend
HELPDESK_BACKEND_HOST=localhost
HELPDESK_BACKEND_PORT=5001

# 4. Messaging Service - WebSocket + REST
MESSAGING_SERVICE_HOST=localhost
MESSAGING_SERVICE_PORT=1002

# 5. Notification Service - WebSocket + REST
NOTIFICATION_SERVICE_HOST=localhost
NOTIFICATION_SERVICE_PORT=1003

# =============================================================================
# Frontend URLs (for CORS)
# =============================================================================
WORKFLOW_FRONTEND_URL=http://localhost:1000
HELPDESK_FRONTEND_URL=http://localhost:5000
VITE_DEV_URL=http://localhost:5173
