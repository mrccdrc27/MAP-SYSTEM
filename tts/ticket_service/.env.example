# Ticket Service Environment Configuration

# Django
DJANGO_ENV=development
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=secret-key-1234
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ticket_db
PGHOST=localhost
PGPORT=5432
POSTGRES_DB=ticket_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password

# CORS
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:1000,http://127.0.0.1:1000,http://localhost:3000,http://127.0.0.1:3000
DJANGO_CORS_ALLOW_ALL_ORIGINS=True

# Celery
DJANGO_CELERY_BROKER_URL=amqp://admin:admin@localhost:5672/
