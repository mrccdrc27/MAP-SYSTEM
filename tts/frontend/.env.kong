# Frontend Environment for Kong Gateway Mode
# When using Kong, route all API calls through the gateway

# Kong Gateway URL (single entry point)
VITE_GATEWAY_URL=http://localhost:8000
VITE_GATEWAY_WS=ws://localhost:8000

# For Kong mode, set this to true to use gateway URLs
VITE_USE_KONG_GATEWAY=true

# Auth service (public endpoints bypass JWT validation)
VITE_AUTH_URL=http://localhost:8000/api/auth

# Workflow API (through gateway)
VITE_WORKFLOW_API=http://localhost:8000/api/workflow
VITE_BACKEND_API=http://localhost:8000/

# Messaging (through gateway)
VITE_MESSAGING_API=http://localhost:8000/api/messages
VITE_MESSAGING_WS=ws://localhost:8000/ws/chat

# Notification (through gateway)
VITE_NOTIFICATION_API=http://localhost:8000/api/notifications
VITE_NOTIFICATION_WS=ws://localhost:8000/ws/notifications

# Helpdesk (through gateway)
VITE_HELPDESK_SERVICE_URL=http://localhost:8000/api/helpdesk

# User service
VITE_USER_SERVER_API=http://localhost:8000/api/users

# Legacy endpoints (adjust as needed)
VITE_TICKET_API=http://localhost:8000/api/tickets
VITE_AGENTS_API=http://localhost:8000/api/agents
VITE_ARCHIVE_API=http://localhost:8000/api/archive
VITE_ADMINTICKET_API=http://localhost:8000/api/adminTicket
VITE_ARCHIVE_TICKETS_API=http://localhost:8000/api/archived_tickets
VITE_UPCOMING_TICKETS_API=http://localhost:8000/api/upcoming_tickets
