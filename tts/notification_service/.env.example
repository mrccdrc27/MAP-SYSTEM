# Notification Service Environment Configuration

# Django
DJANGO_ENV=development
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=secret-key-1234
DJANGO_JWT_SIGNING_KEY=signing-key-1234
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,notification_service

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/notification_db
PGHOST=localhost
PGPORT=5432
POSTGRES_DB=notification_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password

# Gmail API Configuration (replaces SMTP)
GMAIL_CREDENTIALS_PATH=credentials.json
GMAIL_SENDER_EMAIL=your-email@gmail.com
DJANGO_DEFAULT_FROM_EMAIL=noreply@notifications.com

# Gmail API Configuration (for testing/capstone)
# 1. Go to https://console.cloud.google.com/
# 2. Create project and enable Gmail API
# 3. Create OAuth 2.0 Client ID (Desktop app)
# 4. Download credentials.json and place in notification_service folder
# 5. Run test_gmail_api.py to authenticate (will create token.json)
# Note: credentials.json and token.json are gitignored

# CORS
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:1000,http://127.0.0.1:1000
DJANGO_CORS_ALLOW_CREDENTIALS=True

# Service & API Keys
DJANGO_NOTIFICATION_SERVICE_PORT=8001
DJANGO_AUTH_SERVICE_URL=http://localhost:8000
DJANGO_NOTIFICATION_API_KEYS=demo-api-key-123,test-api-key-456
DJANGO_API_KEY=in-app-notification-api-key-secure

# Celery & Queues
DJANGO_CELERY_BROKER_URL=amqp://admin:admin@localhost:5672/
DJANGO_NOTIFICATION_QUEUE=notification-queue
DJANGO_INAPP_NOTIFICATION_QUEUE=inapp-notification-queue

# Google OAuth Credentials (DO NOT COMMIT ACTUAL VALUES)
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_REFRESH_TOKEN=your_refresh_token_here