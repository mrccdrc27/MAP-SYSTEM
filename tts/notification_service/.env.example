# Notification Service Environment Configuration

# Django
DJANGO_ENV=development
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=secret-key-1234
DJANGO_JWT_SIGNING_KEY=signing-key-1234
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,notification_service

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/notification_db
PGHOST=localhost
PGPORT=5432
POSTGRES_DB=notification_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password

# Email Configuration
DJANGO_DEFAULT_FROM_EMAIL=noreply@ticketflow.com
DJANGO_SUPPORT_EMAIL=support@ticketflow.com

# SendGrid Configuration (for production)
# 1. Sign up at https://sendgrid.com
# 2. Go to Settings â†’ API Keys
# 3. Create a new API key with "Mail Send" permissions
# 4. Verify your sender email address
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=TicketFlow
SENDGRID_ENABLED=False

# CORS
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:1000,http://127.0.0.1:1000
DJANGO_CORS_ALLOW_CREDENTIALS=True

# Service & API Keys
DJANGO_NOTIFICATION_SERVICE_PORT=8001
DJANGO_AUTH_SERVICE_URL=http://localhost:8000
DJANGO_NOTIFICATION_API_KEYS=demo-api-key-123,test-api-key-456
DJANGO_API_KEY=in-app-notification-api-key-secure

# Frontend Links
TTS_FRONTEND_URL=http://localhost:1000
TTS_TICKET_PATH_TEMPLATE=/ticket/{id}

# Celery & Queues
DJANGO_CELERY_BROKER_URL=amqp://admin:admin@localhost:5672/
DJANGO_NOTIFICATION_QUEUE=notification-queue
DJANGO_INAPP_NOTIFICATION_QUEUE=inapp-notification-queue