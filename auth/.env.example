# Auth Service Environment Configuration

# =============================================================================
# DJANGO CORE
# =============================================================================
DJANGO_ENV=development
DJANGO_DEBUG=True
DJANGO_SECRET_KEY=secret-key-1234
DJANGO_JWT_SIGNING_KEY=signing-key-1234
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,auth_service,host.docker.internal

# =============================================================================
# DATABASE (SQLite for development, PostgreSQL for production)
# =============================================================================
# For SQLite (default - no configuration needed)
# For PostgreSQL, uncomment and configure:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/auth_db
# PGHOST=localhost
# PGPORT=5432
# POSTGRES_DB=auth_db
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your-secure-password

# =============================================================================
# KONG API GATEWAY INTEGRATION
# =============================================================================
# Kong Gateway URL (where Kong is running)
KONG_GATEWAY_URL=http://localhost:8000

# JWT issuer claim - MUST match Kong jwt_secrets key
JWT_ISSUER=tts-jwt-issuer

# Kong Admin API (for service registration/health checks)
KONG_ADMIN_URL=http://localhost:8001

# =============================================================================
# FRONTEND & CORS
# =============================================================================
# Frontend URL (for redirects and CORS)
FRONTEND_URL=http://localhost:3001

# Cookie settings
# For local development: use 'localhost' or leave empty
# For production with subdomains (e.g., login.domain.com, api.domain.com):
#   Use '.domain.com' (with leading dot) for cross-subdomain cookie sharing
# Example: COOKIE_DOMAIN=.ticketing.mapactive.tech
COOKIE_DOMAIN=localhost
DJANGO_SESSION_COOKIE_SECURE=False
DJANGO_CSRF_COOKIE_SECURE=False

# CORS allowed origins (comma-separated)
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001,http://localhost:3000,http://127.0.0.1:3000

# CSRF trusted origins
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:3001,http://127.0.0.1:3001,http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
DJANGO_EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DJANGO_EMAIL_HOST=smtp.gmail.com
DJANGO_EMAIL_PORT=587
DJANGO_EMAIL_HOST_USER=your-email@gmail.com
DJANGO_EMAIL_HOST_PASSWORD=your-app-password
DJANGO_EMAIL_USE_TLS=True
DJANGO_DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# SendGrid (production)
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=TicketFlow
SENDGRID_ENABLED=False
SUPPORT_EMAIL=support@ticketflow.com

# =============================================================================
# SYSTEM URLS
# =============================================================================
TTS_SYSTEM_URL=http://localhost:1000/
AMS_SYSTEM_URL=http://localhost:3000/ams
HDTS_SYSTEM_URL=http://localhost:3000/hdts
BMS_SYSTEM_URL=http://localhost:3000/bms
DEFAULT_SYSTEM_URL=http://localhost:3000/dashboard

# =============================================================================
# CELERY (if using async tasks)
# =============================================================================
DJANGO_CELERY_BROKER_URL=amqp://admin:admin@localhost:5672/

# =============================================================================
# RECAPTCHA (optional)
# =============================================================================
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_ENABLED=False

