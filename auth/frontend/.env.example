# Auth Frontend Environment Variables
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL - Points to Kong Gateway (recommended for production)
# Leave empty for development (Vite proxy handles routing)
VITE_API_BASE_URL=

# When running with Kong Gateway, set to Kong's URL:
# VITE_API_BASE_URL=http://localhost:8000

# When running directly against backend (no Kong):
# VITE_API_BASE_URL=http://localhost:8003

# =============================================================================
# ENVIRONMENT
# =============================================================================
VITE_ENV=development

# Enable/disable debug logging
VITE_DEBUG=true

# =============================================================================
# AUTH ENDPOINTS (relative paths, proxied through Vite/Kong)
# =============================================================================
VITE_AUTH_LOGIN_ENDPOINT=/api/auth/login
VITE_AUTH_REGISTER_ENDPOINT=/api/auth/register
VITE_AUTH_LOGOUT_ENDPOINT=/api/auth/logout
VITE_AUTH_REFRESH_ENDPOINT=/api/auth/token/refresh
VITE_AUTH_PROFILE_ENDPOINT=/api/users/profile

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_PASSWORD_RESET=true
VITE_ENABLE_RECAPTCHA=false
