# Auth Frontend Environment Variables
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API Base URL - Points to Kong Gateway (recommended for production)
# Leave empty for development (Vite proxy handles routing)
# VITE_API_BASE_URL=

# Kong Gateway Mode (Port 8080)
VITE_API_BASE_URL=http://localhost:8080

# When running directly against backend (no Kong):
# VITE_API_BASE_URL=http://localhost:8003

# =============================================================================
# ENVIRONMENT
# =============================================================================
VITE_ENV=development

# Enable/disable debug logging
VITE_DEBUG=true

# =============================================================================
# AUTH ENDPOINTS (microservices with /auth prefix)
# =============================================================================
VITE_AUTH_LOGIN_ENDPOINT=/auth/api/v1/users/login/api
VITE_AUTH_REGISTER_ENDPOINT=/auth/api/v1/users/register
VITE_AUTH_LOGOUT_ENDPOINT=/auth/api/v1/users/logout
VITE_AUTH_REFRESH_ENDPOINT=/auth/api/v1/users/token/refresh
VITE_AUTH_PROFILE_ENDPOINT=/auth/api/v1/users/profile

# =============================================================================
# SYSTEM REDIRECT URLS (post-login redirection)
# =============================================================================
# These URLs are used after successful login to redirect users to their assigned system
VITE_TTS_SYSTEM_URL=http://localhost:1000
VITE_AMS_SYSTEM_URL=http://localhost:3000/ams
VITE_HDTS_SYSTEM_URL=http://localhost:5173/hdts
VITE_BMS_SYSTEM_URL=http://localhost:3000/bms

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_PASSWORD_RESET=true
VITE_ENABLE_RECAPTCHA=false
